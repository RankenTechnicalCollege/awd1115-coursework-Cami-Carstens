@model Student
@{
}
<h1>Enroll New Student</h1>

<form asp-action="EnrollNewStudent" method="post">
    <div>
        <label asp-for="Name">Student Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    @foreach(var course in ViewBag.Courses as List<Course>)
    {
        <div class="form-check mt-4">
            <input type="checkbox" class="form-check-input" id="@course.CourseId" name="enrolledCourses" value="@course.CourseId"  />
            <label class="form-check-label" for="@course.CourseId">@course.Title</label>

        </div>
    }

    <div>
        <label asp-for="FinancialAidStatus" class="mt-4">Financial Aid Status</label>
        <select asp-for="FinancialAidStatus" class="form-control" >
            <option value="">-- Select Status --</option>
            <option value="Approved">Approved</option>
            <option value="Denied">Denied</option>
            <option value="Pending">Pending</option>
    
</select> 
    </div>

    <input type="hidden" asp-for="StudentId" />
    <button type="submit" class="btn btn-primary mt-3">Enroll Student</button>
</form>