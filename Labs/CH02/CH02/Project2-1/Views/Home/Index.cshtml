@model CalculateQuote

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4 fw-bolder">Price Quotation</h1>
 
</div>
<form method="post" asp-action="Index">
    <div class="text-danger" asp-validation-summary="All"></div>


    <div>
    <label class="form-label mt-2 " asp-for="Subtotal">Subtotal:</label>
    <input class="form-control mb-3" asp-for="Subtotal" required />
    </div>

    <div>
    <label class="form-label mt-2 " asp-for="DiscountPercent">Discount Percentage:</label>
    <input class="form-control mb-3" asp-for="DiscountPercent" value="@Model.DiscountPercent.ToString("0") "/>
    </div>

    <div>
    <label class="form-label mt-2">DiscountAmount:</label>
    <span>@Model.DiscountAmount().ToString("C")</span>
    </div>

    <div>
    <label class="form-label mt-2">Total:</label>
    <span>@Model.Total().ToString("C")</span>
    </div>

    <button class="btn btn-secondary m-3" type="submit">Calculate</button>
    <a class="btn btn-primary m-3" asp-area="" asp-controller="Home" asp-action="Index">Clear</a>
</form>
