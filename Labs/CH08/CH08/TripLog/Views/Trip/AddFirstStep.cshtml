@model TripLog.Models.TripPage1

@{
    ViewBag.Title = "Add Trip - Step 1";

}

@* all fields are required on first page *@
<h4>@ViewBag.SubHeader</h4>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddFirstStep" method="post">
    <div class="form-group">
        <label asp-for="Destination"> </label>
           <input asp-for="Destination" class="form-control" required />
        <span asp-validation-for="Destination" class="text-danger"></span>
       
    </div>

    <div class="form-group">
        <label asp-for="Accommodation"> </label>
        <input asp-for="Accommodation" class="form-control" required />
        <span asp-validation-for="Accommodation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"> </label>
        <input asp-for="StartDate" type="text" class="form-control" placeholder="MM/dd/YYYY" value="" required />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="text" class="form-control" placeholder="MM/dd/YYYY" value="" required  />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-dark mt-3">Next</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark mt-3">Cancel</a>

</form>