@model IEnumerable<TripLog.Models.Trip>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
  
</div>
    <p>Welcome to your personal travel journal application!</p>
    <a asp-controller="Trip" asp-action="AddFirstStep" class="btn btn-primary">Add Trip</a>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Accommodations</th>
            <th>Things To Do</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate.ToString("MM/dd/yyyy")</td>
                <td>@trip.EndDate.ToString("MM/dd/yyyy")</td>
                <td>@trip.Accommodation</td>
                <td>@trip.Activity1 <br />
                    @trip.Activity2<br />
                    @trip.Activity3
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-4">
            @TempData["SuccessMessage"]
        </div>
     }



