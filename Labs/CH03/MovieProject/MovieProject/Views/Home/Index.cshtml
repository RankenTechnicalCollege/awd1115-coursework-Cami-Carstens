@model List<MovieModel>
@{
    ViewData["Title"] = "My Movie List";
}

<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add" class="btn btn-success">Add New Movie</a>
</div>

<table class="table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td class="p-3">@movie.Year</td>
                <td class="p-3">@movie.Genre.Name</td>
                <td class="text-center">@movie.Rating</td>

                <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.MovieId" asp-route-slug="@movie.Slug" class="btn btn-secondary p-2 m-2">Edit</a>
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.MovieId"asp-route-slug="@movie.Slug" class="btn btn-danger p-2 m-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>