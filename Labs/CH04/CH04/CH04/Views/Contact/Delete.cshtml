@model CH04.Models.Contact
@{
    ViewBag.Title = $"Delete {Model.FirstName}";
}

<h1>Contact Manager</h1>
<h2 class="mt-3 mb-2">Delete Contact</h2>

<p>Do you really want to delete @Model.FirstName?</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" asp-route-slug="@Model.Slug" class="btn btn-success">Yes</button>
    <a asp-action="List" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="btn btn-danger">No</a>
</form>