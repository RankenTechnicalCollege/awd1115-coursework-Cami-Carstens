@model IEnumerable<Contact>
@{
    ViewBag.Title = "Contact Manager";
}
<h1>Contact Manager</h1>
    <div class="mb-2">
    <a asp-action="AddEdit" class="text-primary mt-3 mb-3 fs-3">Add New Contact</a>
    </div>
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th>
                           First Name
                        </th>

                        <th>
                          Last Name
                        </th>

                        <th>
                            Email
                       </th>

                        <th>
                          Phone
                        </th>

                        <th>
                           Category
                        </th>

                       
                    </tr>
                </thead>

                <tbody>
                    @foreach(var contact in Model)
                    {
                        <tr>
                            <td>
                               <a asp-controller="Details" asp-action="Details" asp-route-id="@contact.Id">@contact.FirstName
                    </a>
                            </td>
                            <td>
                    <a asp-controller="Details" asp-action="Details" asp-route-id="@contact.Id">
                                @contact.LastName
                    </a>
                            </td>
                            <td>
                                 @contact.Email
                            </td>
                            <td>
                                 @contact.Phone
                            </td>
                            <td>
                    @contact.Category?.Name</td>
                            

                            <td>
                           @*  <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-sm btn-warning">Edit</a> *@

                           
                            </td>
                        </tr>
                    }
                </tbody>

                </table>
        
        
        
   




