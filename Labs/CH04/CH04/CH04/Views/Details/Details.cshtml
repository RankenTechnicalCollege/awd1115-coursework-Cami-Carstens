@model Contact
@{
    ViewBag.Title = "Contact Details";
}

<h1>Contact Manager</h1>

<h2 class="mt-3 mb-2">Contact Details</h2>

<p><strong>FIRST NAME: @Model.FirstName</strong></p>
<p><strong>LAST NAME: @Model.LastName</strong></p>
<p><strong>EMAIL: @Model.Email</strong></p>
<p><strong>PHONE: @Model.Phone</strong></p>
<p><strong>CATEGORY: @Model.Category</strong></p>
<p><strong>DATE ADDED: @Model.Created.ToString("g")</strong></p>

<a asp-controller="Contact" asp-action="AddEdit" asp-route-id="@Model.Id" class="btn btn-dark me-2">Edit</a>
<a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-dark me-2">Delete</a>
<a asp-controller="Contact" asp-action="List" asp-route-id="@Model.Id" class="btn btn-dark">Home</a>
