@using NovelNookBookStore.Models.ViewModels
@model DiscussionViewModel

@{
   
    ViewBag.Title = "Discussion Board";
}

<h1 class="text-center my-4">Join the Book Talk!</h1>

<form asp-area="" asp-controller="Discussion" asp-action="Index" method="post" class="mb-5">
    <input type="hidden" asp-for="NewDiscussion.Id" />

    <div class="row g-3">
        <div class="col-md-4">
            <input asp-for="NewDiscussion.Author" class="form-control mb-2" placeholder="Author" />
            <input asp-for="NewDiscussion.Title" class="form-control mb-2" placeholder="Book Title" />
            <select asp-for="NewDiscussion.Genre" class="form-select mb-2">
                <option value="">Select Genre</option>
                <option>Fiction</option>
                <option>Non-Fiction</option>
                <option>Memoir</option>
                <option>Horror</option>
                <option>Self-Help</option>
                <option>Psychological Thriller</option>
                <option>Historical Fiction</option>
                <option>Education/Academic</option>
                <option>Young Adult</option>
            </select>

            <select asp-for="NewDiscussion.Review" class="form-select mb-2" placeholder="Select Rating">
                <option value="">Select Rating</option>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
         
        </div>

        <div class="col-md-8">
            <textarea asp-for="NewDiscussion.OpinionField" class="form-control mb-2" placeholder="Your thoughts"></textarea>
            <button type="submit" class="btn btn-secondary mt-2">Submit</button>
           
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.SuccessMessage
                </div>
            }

        </div>
    </div>
</form>

<hr />

<h2 class="text-center mb-3">Existing Discussions</h2>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var discussion in Model.Discussions)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5>@discussion.Title</h5>
                    <h6 class="text-muted">by @discussion.Author</h6>
                    <p><strong>Genre:</strong> @discussion.Genre</p>
                    <p><strong>Rating:</strong> @discussion.Review ⭐</p>
                    <p>@discussion.OpinionField</p>
                </div>
                <div class="card-footer d-flex gap-2">
                    <a asp-area="" asp-controller="Discussion" asp-action="Edit" asp-route-id="@discussion.Id" class="btn btn-secondary btn-sm">Edit</a>

                    <form asp-area="" asp-controller="Discussion" asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@discussion.Id" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this discussion?');">
                            Delete
                        </button>

                     
                    </form>
                </div>
            </div>
        </div>
    }
</div>










