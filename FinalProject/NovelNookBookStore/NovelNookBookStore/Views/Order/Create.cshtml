@model OrderViewModel
@using NovelNookBookStore.Models.DomainModels

@{
    ViewBag.Title = "Create Order";
}

<h1>Create New Order</h1>

<h3>Books</h3>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity & Add</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model.Books)
        {
            <tr>
                <td>
                    <img src="@Url.Content(book.ImageUrl ?? book.Image ?? "~/Images/default.png")"
                         alt="@book.Title" class="img-fluid" style="max-width:100px;" />
                </td>
                <td>@book.Title</td>
                <td>@book.Price.ToString("C")</td>
                <td>
                    <form asp-action="AddItem" method="post" class="d-flex align-items-center">
                        <input type="hidden" name="bookId" value="@book.BookId" />
                        <input type="number" name="bookQty" class="form-control me-2" value="1" min="1" style="width:80px;" />
                        <button type="submit" class="btn btn-info" onclick="alert('Item successfully added to cart!')">Add Book</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Decors</h3>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity & Add</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Decor decor in Model.Decors)
        {
            <tr>
                <td>
                    <img src="@Url.Content(decor.ImageUrl ?? decor.Image ?? "~/Images/default.png")"
                         alt="@decor.Name" class="img-fluid" style="max-width:100px;" />
                </td>
                <td>@decor.Name</td>
                <td>@decor.Price.ToString("C")</td>
                <td>
                    <form asp-action="AddItem" method="post" class="d-flex align-items-center">
                        <input type="hidden" name="decorId" value="@decor.DecorId" />
                        <input type="number" name="decorQty" class="form-control me-2" value="1" min="1" style="width:80px;" />
                        <button type="submit" class="btn btn-info">Add Decor</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


