@using NovelNookBookStore.Models.DomainModels
@model IEnumerable<NovelNookBookStore.Models.DomainModels.Decor>

@{
    ViewBag.Title = "Decor Details";
}

@functions {
    string GetDeleteModalId(Decor item)
    {
        return "deleteModal" + item.DecorId;
    }
    string GetModalId(Decor item)
    {
        return "deleteModal" + item.DecorId;
    }
}

<h4>Admin Decor Details</h4>

<a asp-action="AddEdit" asp-area="Admin" asp-controller="Decor" class="btn btn-secondary mb-3">Create a new decor entry</a>
<a asp-action="Details" asp-area="Admin" asp-controller="Book" class="mb-3">Book List</a>
<a asp-action="Details" asp-area="Admin" asp-controller="Sale" class="mb-3 ms-3">Clearance List</a>
<div class="col">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImageUrl ?? item.Image ?? "~/Images/default.png")"
                             alt="@item.Name" class="img-fluid" />

                    </td>
                    <td>@item.Name</td>
                
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Stock</td>
                    <td>@item.CategoryId</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Decor" asp-action="AddEdit" asp-route-id="@item.DecorId" class="btn btn-outline-dark">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                    <td>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@GetDeleteModalId(item)">
                            <i class="bi bi-trash3"></i> Delete
                        </button>

                        <div class="modal fade" id="@GetModalId(item)" tabindex="-1" aria-labelledby="deleteModalLabel@item.BookId" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel@item.BookId">Delete Book</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete <strong>@item.Name</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-area="Admin" asp-controller="Book" asp-action="DeleteConfirmed" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.DecorId" />
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>


                                    </div>
                                </div>
                            </div>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>