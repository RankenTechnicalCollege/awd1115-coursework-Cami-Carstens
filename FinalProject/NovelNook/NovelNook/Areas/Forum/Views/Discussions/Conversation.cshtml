@model IEnumerable<NovelNook.Areas.Forum.Models.Discussion>
@{
    Layout = "_Layout";
    ViewBag.Title = "Discussion Board";
}

<h1 class="text-center my-4">Book Talk</h1>

<a asp-area="Forum" asp-controller="Discussions" asp-action="Index" class="btn btn-primary mb-3">Add New Discussion</a>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var discussion in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@discussion.Title</h5>
                    <h6 class="card-subtitle mb-2">by @discussion.Author</h6>
                    <p class="card-text"><strong>Genre:</strong> @discussion.Genre</p>
                    <p class="card-text"><strong>Rating:</strong> @discussion.Review ⭐</p>
                    <p class="card-text">@discussion.OpinionField</p>

                </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <a asp-area="Forum" asp-controller="Discussions" asp-action="Edit" asp-route-id="@discussion.Id" class="btn btn-sm btn-secondary">Edit</a>


                        <form asp-area="Forum" asp-controller="Discussions" asp-action="DeleteConfirmed" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@discussion.Id" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this discussion?');">
                            Delete
                        </button>
                            
                        </form>
                    </div>
                </div>
            </div>
        
    }
    
</div>




