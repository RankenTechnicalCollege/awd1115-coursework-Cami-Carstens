    <input type="text" placeholder="Search.." name="search">
    <button type="submit" class=""><i class="fa fa-search"></i></button>
    </div>

    <div>
    <button type="button" class="btn btn-lg btn-secondary m-3">Read</button>
    <button type="button" class="btn btn-lg btn-secondary me-3">Currently Reading</button>
    <button type="button" class="btn btn-lg btn-secondary">Want to Read</button>
    </div>
</div>

