@model HOT3.Models.Hoodie
@{
    ViewBag.Title = "Admin Loyal Cloth Hoodie Inventory Delete";
}
<h1>Are you sure you want to delete @Model.Slug ?</h1>

<form asp-controller="Hoodie" asp-action="DeleteHoodie" asp-method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />

    <a asp-action="List" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="btn btn-dark text-white">Cancel</a>

</form>
