    <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-dark text-white me-2 mb-3">Add New Appointment</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark mb-3">Cancel</a>
        </div>
    </div>

</form>
